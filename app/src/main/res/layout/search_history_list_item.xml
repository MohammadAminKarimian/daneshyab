<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/search_history_list_item_image"
        android:layout_width="@dimen/small_list_item_icon_width"
        android:layout_height="@dimen/small_list_item_icon_height"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/grey_40"
        android:src="@drawable/history_image"/>

    <TextView
        android:id="@+id/search_history_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintRight_toLeftOf="@+id/search_history_list_item_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/grey_40"
        android:textSize="16sp"
        tools:text="این را کجا بود؟" />

</android.support.constraint.ConstraintLayout>